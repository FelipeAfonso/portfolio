                <ul role="list" class="-mb-8">
                    {
                        academic_parsed.map((item, i) => (
                            <ExperienceCard
                                {...item}
                                isLast={i === academic_parsed.length - 1}
                            />
                        ))
                    }
                </ul>
            </div>
        </div>
    </section>
    <hr class="app-container border-neutral-700" />
    <section id="projects" class="app-container py-8 text-white">
